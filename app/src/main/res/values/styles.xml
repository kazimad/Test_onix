<resources>

    <!-- Base application theme. -->
    <style name="AppThemeMain" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>

        <item name="colorPrimaryDark">@color/primary_dark</item>

        <item name="colorAccent">@color/color_white</item>

        <item name="met_primaryColor">@color/primary</item>

        <item name="android:colorBackground">@color/color_white</item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="android:textColor">@color/icons</item>
        <item name="android:textColorSecondary">@color/border</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <style name="splashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/index_3</item>-->
        <item name="android:windowBackground">@drawable/homer</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/icons</item>

    </style>
    <style name="SquareButton" parent="android:Widget.DeviceDefault.Button">
        <item name="android:background">@drawable/btn_rectangular_main</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>
    <style name="SquareButton.Gren">
        <item name="android:background">@drawable/btn_rectangular_green</item>
    </style>

</resources>
